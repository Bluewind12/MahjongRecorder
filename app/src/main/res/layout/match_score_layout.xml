<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/player_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matchTitleText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerSelectSpinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/matchTitleText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerSelectSpinner2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerSelectSpinner"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerSelectSpinner3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerSelectSpinner2"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/playerSelectSpinner4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerSelectSpinner3"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:id="@+id/recyclerView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout3"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/tableLayout3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerSelectSpinner4">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleText" android:layout_weight="1.5"/>
            <TextView
                    android:text="@string/rank_1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleText2" android:layout_weight="1"/>
            <TextView
                    android:text="@string/rank_2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleText3" android:layout_weight="1"/>
            <TextView
                    android:text="@string/rank_3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleText4" android:layout_weight="1"/>
            <TextView
                    android:text="@string/rank_4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleText5" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerNameTextView"
                    android:layout_weight="1.5" tools:text="プレイヤー名"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank1TextView"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank2TextView"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank3TextView"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank4TextView"
                    android:layout_weight="1" tools:text="回数の表示"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerNameTextView2"
                    android:layout_weight="1.5" tools:text="プレイヤー名"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank1TextView2"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank2TextView2"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank3TextView2"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank4TextView2"
                    android:layout_weight="1" tools:text="回数の表示"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerNameTextView3"
                    android:layout_weight="1.5" tools:text="プレイヤー名"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank1TextView3"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank2TextView3"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank3TextView3"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank4TextView3"
                    android:layout_weight="1" tools:text="回数の表示"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerNameTextView4"
                    android:layout_weight="1.5" tools:text="プレイヤー名"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank1TextView4"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank2TextView4"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank3TextView4"
                    android:layout_weight="1" tools:text="回数の表示"/>
            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" android:id="@+id/playerRank4TextView4"
                    android:layout_weight="1" tools:text="回数の表示"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>