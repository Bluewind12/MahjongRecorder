<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:nendsdk="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">
        <SearchView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/searchView" android:layout_marginTop="8dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/searchView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/dataRecyclerView" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/nendHome"
                android:cacheColorHint="?attr/colorPrimary"
                android:requiresFadingEdge="horizontal|vertical"
        />
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@android:drawable/btn_star"
                android:id="@+id/floatingActionButton"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"/>
        <net.nend.android.NendAdView
                android:id="@+id/nendHome"
                android:layout_width="320dp"
                android:layout_height="50dp"
                nendsdk:NendApiKey="@string/nend_home_key"
                nendsdk:NendSpotId="@integer/nend_home_id"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start">
        <LinearLayout
                android:id="@+id/fragmentMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/appImageView"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="@string/summary" android:textSize="30sp"
                    android:background="@color/colorPrimary" android:textColor="@android:color/white"
                    android:gravity="center"/>
            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/solo_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_one"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard2"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/data_list_easy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView2"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_menu"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard3"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/fight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_human"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:text="@string/jump_web" android:textSize="30sp"
                    android:background="@color/colorPrimary" android:textColor="@android:color/white"
                    android:gravity="center"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard4"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/hp_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView4"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView4"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_sakura"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard5"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/privacy_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView5"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView5"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_kami"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/menuCard6"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@string/review_string"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView6"
                            android:layout_marginStart="8dp" android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:adjustViewBounds="true" app:srcCompat="@drawable/icon_rev"
                            android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>